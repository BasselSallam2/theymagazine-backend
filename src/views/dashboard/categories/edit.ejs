<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Edit Category</h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/dashboard/categories/edit/<%= category._id %>">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">Name *</label>
                            <% if (category.slug === 'reels') { %>
                                <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>" readonly>
                                <div class="form-text text-warning">This field cannot be changed for the reels category.</div>
                            <% } else { %>
                            <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>" required>
                            <% } %>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="slug" class="form-label">Slug</label>
                            <% if (category.slug === 'reels') { %>
                                <input type="text" class="form-control" id="slug" name="slug" value="<%= category.slug %>" readonly>
                                <div class="form-text text-warning">This field cannot be changed for the reels category.</div>
                            <% } else { %>
                            <input type="text" class="form-control" id="slug" name="slug" value="<%= category.slug %>">
                            <div class="form-text">Leave empty to auto-generate from name</div>
                            <% } %>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3"><%= category.description || '' %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="parent" class="form-label">Parent Category</label>
                        <select class="form-select" id="parent" name="parent">
                            <option value="">Root Category (No Parent)</option>
                            <% if (categories && categories.length > 0) { %>
                                <% categories.forEach(cat => { %>
                                    <% if (cat._id.toString() !== category._id.toString()) { %>
                                        <option value="<%= cat._id %>" <%= (cat._id.toString() === (category.parent ? category.parent._id.toString() : '')) ? 'selected' : '' %>>
                                            <%= cat.name %>
                                        </option>
                                    <% } %>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Update Category
                        </button>
                        <a href="/dashboard/categories" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
