<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/dashboard.css" rel="stylesheet">
    <style>
        #editor.empty:before {
            content: attr(data-placeholder);
            color: #6c757d;
            font-style: italic;
            pointer-events: none;
        }
        #editor {
            position: relative;
        }
        #editor.empty:before {
            position: absolute;
            top: 0.375rem;
            left: 0.75rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block bg-dark sidebar">
                <div class="sidebar-sticky">
                    <div class="sidebar-header p-3">
                        <h5 class="text-white mb-0">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </h5>
                        <p class="text-muted small mb-0">Merhan Blog Admin</p>
                    </div>

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white <%= title === 'Dashboard' ? 'active' : '' %>" href="/dashboard">
                                <i class="fas fa-home me-2"></i>Dashboard Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                                <span>Content Management</span>
                            </h6>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white <%= title.includes('Posts') ? 'active' : '' %>" href="/dashboard/posts">
                                <i class="fas fa-newspaper me-2"></i>Posts
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white <%= title.includes('Categories') ? 'active' : '' %>" href="/dashboard/categories">
                                <i class="fas fa-tags me-2"></i>Categories
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white <%= title.includes('Navbar') ? 'active' : '' %>" href="/dashboard/navbar">
                                <i class="fas fa-bars me-2"></i>Navbar
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white <%= title.includes('Footer') ? 'active' : '' %>" href="/dashboard/footer">
                                <i class="fas fa-sticky-note me-2"></i>Footer
                            </a>
                        </li>

                        <li class="nav-item">
                            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                                <span>User Management</span>
                            </h6>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white <%= title.includes('Users') ? 'active' : '' %>" href="/dashboard/users">
                                <i class="fas fa-users me-2"></i>Users
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white <%= title.includes('Roles') ? 'active' : '' %>" href="/dashboard/roles">
                                <i class="fas fa-user-shield me-2"></i>Roles
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
                <!-- Header -->
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><%= title %></h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <% if (typeof user !== 'undefined' && user) { %>
                                <span class="navbar-text text-muted me-3">
                                    Welcome, <%= user.name %>
                                </span>
                            <% } %>
                            <form action="/dashboard/logout" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Page content -->
                <% if (template === 'dashboard/index') { %>
                    <%- include('index') %>
                <% } else if (template === 'dashboard/navbar/list') { %>
                    <%- include('navbar/list') %>
                <% } else if (template === 'dashboard/navbar/create') { %>
                    <%- include('navbar/create') %>
                <% } else if (template === 'dashboard/navbar/edit') { %>
                    <%- include('navbar/edit') %>
                <% } else if (template === 'dashboard/categories/list') { %>
                    <%- include('categories/list') %>
                <% } else if (template === 'dashboard/categories/create') { %>
                    <%- include('categories/create') %>
                <% } else if (template === 'dashboard/categories/edit') { %>
                    <%- include('categories/edit') %>
                <% } else if (template === 'dashboard/posts/list') { %>
                    <%- include('posts/list') %>
                <% } else if (template === 'dashboard/posts/create') { %>
                    <%- include('posts/create') %>
                <% } else if (template === 'dashboard/posts/edit') { %>
                    <%- include('posts/edit') %>
                <% } else if (template === 'dashboard/users/list') { %>
                    <%- include('users/list') %>
                <% } else if (template === 'dashboard/users/create') { %>
                    <%- include('users/create') %>
                <% } else if (template === 'dashboard/users/edit') { %>
                    <%- include('users/edit') %>
                <% } else if (template === 'dashboard/roles/list') { %>
                    <%- include('roles/list') %>
                <% } else if (template === 'dashboard/roles/create') { %>
                    <%- include('roles/create') %>
                <% } else if (template === 'dashboard/roles/edit') { %>
                    <%- include('roles/edit') %>
                <% } else if (template === 'dashboard/footer/list') { %>
                    <%- include('footer/list') %>
                <% } else if (template === 'dashboard/footer/create') { %>
                    <%- include('footer/create') %>
                <% } else if (template === 'dashboard/footer/edit') { %>
                    <%- include('footer/edit') %>
                <% } %>

            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/dashboard.js"></script>
</body>
</html>
