<div class="row">
    <!-- Stats Cards -->
    <div class="col-md-3 mb-4">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Posts</h5>
                        <h2 class="mb-0"><%= stats.posts %></h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-newspaper fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/dashboard/posts" class="text-white text-decoration-none">
                    View All Posts <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Categories</h5>
                        <h2 class="mb-0"><%= stats.categories %></h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-tags fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/dashboard/categories" class="text-white text-decoration-none">
                    View All Categories <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Users</h5>
                        <h2 class="mb-0"><%= stats.users %></h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/dashboard/users" class="text-white text-decoration-none">
                    View All Users <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card bg-warning text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Navbar Items</h5>
                        <h2 class="mb-0"><%= stats.navbar %></h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-bars fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/dashboard/navbar" class="text-white text-decoration-none">
                    View All Items <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Quick Actions -->
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="/dashboard/posts/create" class="btn btn-primary w-100">
                            <i class="fas fa-plus me-2"></i>Create New Post
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/dashboard/categories/create" class="btn btn-success w-100">
                            <i class="fas fa-tag me-2"></i>Add Category
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/dashboard/users/create" class="btn btn-info w-100">
                            <i class="fas fa-user-plus me-2"></i>Add User
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/dashboard/navbar/create" class="btn btn-warning w-100">
                            <i class="fas fa-bars me-2"></i>Add Navbar Item
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <!-- Recent Activity -->
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">System Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Server Status</h6>
                        <p class="text-success mb-0">
                            <i class="fas fa-circle me-2"></i>Running
                        </p>
                        <small class="text-muted">Backend API Server</small>
                    </div>
                    <div class="col-md-6">
                        <h6>Database</h6>
                        <p class="text-success mb-0">
                            <i class="fas fa-circle me-2"></i>Connected
                        </p>
                        <small class="text-muted">MongoDB Atlas</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
